<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



        <View
            android:layout_marginTop="6dp"
            android:background="#cecdcd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="S.N"-->
            <!--android:padding="8dp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:textColor="#000"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Details"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="#000"/>




    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:background="#cecdcd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:weightSum="5">


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="1"-->
            <!--android:id="@+id/sn"-->
            <!--android:padding="8dp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:textColor="#000"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4.5"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="16dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java Programming "
            android:padding="8dp"
            android:id="@+id/bookname"
            android:layout_weight="4.5"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course"
                android:padding="8dp"
                android:id="@+id/course"
                android:layout_weight="4.5"
                android:layout_marginRight="16dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:padding="8dp"
                android:id="@+id/semester"
                android:layout_weight="4.5"
                android:layout_marginRight="16dp"
                android:textColor="#000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/shlogo"
                    android:id="@+id/photo"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Useful (BIM/BBA):"
                android:padding="8dp"
                android:id="@+id/useful"
                android:layout_weight="4.5"
                android:layout_marginRight="4dp"
                android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:padding="8dp"
                    android:id="@+id/yesno"
                    android:layout_weight="4.5"
                    android:layout_marginRight="16dp"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:padding="8dp"
                    android:layout_weight="4.5"
                    android:layout_marginRight="4dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-6-25"
                    android:padding="8dp"
                    android:id="@+id/date"
                    android:layout_weight="4.5"
                    android:layout_marginRight="16dp"
                    android:textColor="#000"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Publication"
                android:padding="8dp"
                android:id="@+id/publication"
                android:layout_weight="4.5"
                android:layout_marginRight="16dp"
                android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5th Edition"
                    android:padding="8dp"
                    android:id="@+id/edition"
                    android:layout_weight="4.5"
                    android:layout_marginRight="8dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017"
                    android:padding="8dp"
                    android:id="@+id/year"
                    android:layout_weight="4.5"
                    android:layout_marginRight="16dp"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:padding="8dp"
                    android:layout_weight="4.5"
                    android:layout_marginRight="8dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:padding="8dp"
                    android:id="@+id/price"
                    android:layout_weight="4.5"
                    android:layout_marginRight="16dp"
                    android:textColor="#000"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual Cost:"
                    android:padding="8dp"
                    android:layout_weight="4.5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:padding="8dp"
                    android:id="@+id/marketprice"
                    android:layout_weight="4.5"
                    android:layout_marginRight="16dp"
                    android:textColor="#000"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:background="#cecdcd"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"/>




</LinearLayout>