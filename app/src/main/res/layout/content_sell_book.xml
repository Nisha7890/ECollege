<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sunbi.e_college.Activity.SellBookActivity"
    tools:showIn="@layout/activity_sell_book">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Please Fill The Form To Sell Your Old Book"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Book Details (Field * are required)"
        />

    <View
        android:layout_marginTop="6dp"
        android:background="#cecdcd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Course*"
            android:textColor="#000"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinnerCourse"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:elevation="4dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:spinnerMode="dropdown"
            android:gravity="center"


            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Semester*"
                android:textColor="#000"
                android:padding="8dp"/>

            <Spinner
                android:id="@+id/spinnerSemester"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:spinnerMode="dropdown"
                android:gravity="center"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Useful For BIM/BBA*"
                android:textColor="#000"
                android:padding="8dp"/>

            <CheckBox
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:id="@+id/checkYes"
                android:padding="8dp"/>

            <CheckBox
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:id="@+id/checkNo"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Name*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Eg: Data Mining"
                        android:backgroundTint="@android:color/transparent"
                        android:id="@+id/bookname"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Name*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg: Asmita Publication"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/publicationname"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edition Year*"
                android:inputType="number"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg: 2017"
                    android:inputType="number"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/editionyear"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Edition*"
                android:textColor="#000"
                android:padding="8dp"/>

            <Spinner
                android:id="@+id/spinnerBookedition"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:spinnerMode="dropdown"
                android:gravity="center"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Price*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price you want to charge"
                    android:inputType="number"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/bookprice"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual Book Price*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Market price of book"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/bookmarketprice"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Photo*"
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="8dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Photo"
                android:padding="8dp"
                android:layout_gravity="center"
                android:id="@+id/browse_button" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:id="@+id/bookimg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                android:id="@+id/cardviewdate"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Double Click For Datepicker"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/date"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <View
            android:layout_marginTop="6dp"
            android:background="#cecdcd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="Your Details (Field* are required)"/>

        <View
            android:layout_marginTop="6dp"
            android:background="#cecdcd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Contact*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg: 9841****56"
                    android:inputType="number"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/contact"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Address*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg: Baneshwor"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/address"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your College Name*"
                android:textColor="#000"
                android:padding="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eg: Thames College"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/college"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post For Sell"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#fff"
            android:id="@+id/postForsell"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/oval"/>

    </LinearLayout>

    </ScrollView>


</LinearLayout>
