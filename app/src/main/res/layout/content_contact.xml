<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sunbi.e_college.Activity.ContactActivity"
    tools:showIn="@layout/activity_contact">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/shlogo"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        />
    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:background="#ffa200"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="center">

    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baneshwor, Kathmandu"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="#848383"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/call"
            android:orientation="horizontal">


            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:id="@+id/imgcall"
            android:background="@drawable/circle"
            android:src="@drawable/ic_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="#848383"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/message"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp">

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:id="@+id/imgmessage"
            android:background="@drawable/circle"
            android:src="@drawable/ic_message"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Sms"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="#848383"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/linearlayoutemail">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/email"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:id="@+id/imgemail"
            android:background="@drawable/circle"
            android:src="@drawable/ic_email"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Us"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="#848383"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:id="@+id/linearlocation">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:id="@+id/imglocation"
                android:background="@drawable/circle"
                android:src="@drawable/ic_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="#848383"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any feedback?"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here !!"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/click"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColorHint="#000"/>





    </LinearLayout>








</LinearLayout>


