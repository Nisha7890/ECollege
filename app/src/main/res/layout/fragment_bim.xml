<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sunbi.e_college.Fragment.BimFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:orientation="horizontal"
                android:padding="8dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_graduation"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitXY"
                    android:id="@+id/imgBIM"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="BIM"-->
                    <!--android:id="@+id/txtBimHeader1"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textSize="26sp"-->
                    <!--android:textColor="#000"-->
                    <!--android:padding="8dp"-->
                    <!--android:layout_toRightOf="@id/imgBIM"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_marginTop="16dp"-->
                    <!--android:layout_marginLeft="16dp"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:layout_marginBottom="16dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--/>-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/txtBbaText1"
                    android:fontFamily="serif"
                    android:text="Bachelors in Information Management"
                    android:textColor="#000"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Bim"
                android:lineSpacingExtra="5dp"
                android:textColor="#000"
                android:id="@+id/txtBba"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/oval"
            android:weightSum="4">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Questions"
                android:layout_weight="3"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/txtQuestionBim"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:id="@+id/imgQuestionBim"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/oval"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Syllabus"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:textSize="16sp"
                android:padding="8dp"
                android:fontFamily="sans-serif"
                android:id="@+id/txtSyllabusBim"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:id="@+id/imgSyllabusBim"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/oval"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="College Info"
                android:id="@+id/txtCollegeinfoBim"
                android:layout_marginTop="8dp"
                android:layout_weight="3"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:id="@+id/imgCollegeinfoBim"
                />


        </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
